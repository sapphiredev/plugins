{
	"name": "root",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"clean": "rimraf packages/**/dist",
		"lint": "eslint packages --ext mjs,js,ts --fix",
		"format": "prettier --write packages/**/{src,tests,scripts}/**/*.{mjs,ts,js}",
		"test": "jest",
		"test:watch": "jest --watch",
		"build": "lerna run build --parallel",
		"docs": "typedoc",
		"commit": "git-cz",
		"cz": "git-cz",
		"update": "yarn upgrade-interactive",
		"prepare": "husky install .github/husky"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.2.1",
		"@commitlint/config-conventional": "^13.2.0",
		"@favware/npm-deprecate": "^1.0.4",
		"@sapphire/eslint-config": "^4.0.1",
		"@sapphire/framework": "^2.1.0",
		"@sapphire/pieces": "^3.1.0",
		"@sapphire/prettier-config": "^1.2.3",
		"@sapphire/ts-config": "^3.1.2",
		"@sapphire/utilities": "^3.0.4",
		"@types/jest": "^27.0.2",
		"@types/node": "^16.11.1",
		"@types/node-fetch": "^2.5.12",
		"@types/ws": "^8.2.0",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"cz-conventional-changelog": "^3.3.0",
		"discord-api-types": "0.23.1",
		"discord.js": "^13.2.0",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"gen-esm-wrapper": "^1.1.3",
		"husky": "^7.0.2",
		"jest": "^27.2.5",
		"jest-circus": "^27.2.5",
		"lerna": "^4.0.0",
		"lint-staged": "^11.2.3",
		"prettier": "^2.4.1",
		"pretty-quick": "^3.1.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^27.0.7",
		"ts-node": "^10.3.0",
		"typedoc": "^0.22.5",
		"typescript": "^4.4.4"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphiredev/plugins.git"
	},
	"engines": {
		"node": ">=v14.0.0",
		"npm": ">=7.0.0"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"acorn": "^8.5.0",
		"jest-environment-jsdom": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.1.1.tgz",
		"jest-jasmine2": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.1.1.tgz"
	},
	"prettier": "@sapphire/prettier-config",
	"packageManager": "yarn@3.0.2"
}
