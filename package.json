{
	"name": "root-plugins",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"clean": "rimraf \"packages/**/dist\" \"packages/**/.turbo\"",
		"lint": "turbo run lint",
		"format": "prettier --write \"packages/**/{src,tests,scripts}/**/*.{mjs,ts,js}\"",
		"test": "turbo run test",
		"build": "turbo run build",
		"docs": "typedoc",
		"commit": "git-cz",
		"cz": "git-cz",
		"update": "yarn upgrade-interactive",
		"prepare": "husky install .github/husky"
	},
	"turbo": {
		"pipeline": {
			"build": {
				"dependsOn": [
					"^build"
				],
				"outputs": [
					"dist/**"
				]
			},
			"lint": {
				"dependsOn": [],
				"outputs": []
			},
			"test": {
				"dependsOn": [],
				"outputs": []
			}
		}
	},
	"devDependencies": {
		"@commitlint/cli": "^15.0.0",
		"@commitlint/config-conventional": "^15.0.0",
		"@favware/npm-deprecate": "^1.0.4",
		"@sapphire/eslint-config": "^4.0.8",
		"@sapphire/framework": "^2.2.1",
		"@sapphire/pieces": "^3.2.0",
		"@sapphire/prettier-config": "^1.2.7",
		"@sapphire/ts-config": "^3.1.6",
		"@sapphire/utilities": "^3.1.0",
		"@types/jest": "^27.0.3",
		"@types/node": "^17.0.0",
		"@types/node-fetch": "^2.5.12",
		"@types/ws": "^8.2.2",
		"@typescript-eslint/eslint-plugin": "^5.7.0",
		"@typescript-eslint/parser": "^5.7.0",
		"cz-conventional-changelog": "^3.3.0",
		"discord-api-types": "^0.25.2",
		"discord.js": "^13.3.1",
		"eslint": "^8.5.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"gen-esm-wrapper": "^1.1.3",
		"husky": "^7.0.4",
		"jest": "^27.4.5",
		"jest-circus": "^27.4.5",
		"lerna": "^4.0.0",
		"lint-staged": "^12.1.3",
		"prettier": "^2.5.1",
		"pretty-quick": "^3.1.2",
		"rimraf": "^3.0.2",
		"ts-jest": "^27.1.2",
		"ts-node": "^10.4.0",
		"turbo": "^1.0.19",
		"typedoc": "^0.22.10",
		"typedoc-plugin-djs-links": "^1.0.3",
		"typedoc-plugin-mdn-links": "^1.0.4",
		"typescript": "^4.5.4"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphiredev/plugins.git"
	},
	"engines": {
		"node": ">=v14.0.0",
		"npm": ">=7.0.0"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"acorn": "^8.6.0",
		"jest-environment-jsdom": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.1.3.tgz",
		"jest-jasmine2": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.1.3.tgz"
	},
	"prettier": "@sapphire/prettier-config",
	"packageManager": "yarn@3.1.1"
}
